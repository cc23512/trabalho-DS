<!-- consultasPaciente.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="consultasPaciente.css" />
    <title>Consultas Agendadas</title>
  </head>
  <body>
    <!-- Tabela de Consultas Agendadas -->
    <div class="container">
      <h2 class="mb-4">Suas Consultas Agendadas</h2>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="thead-dark">
            <tr>
              <th>ID Consulta</th>
              <th>ID Médico</th>
              <th>Data da Consulta</th>
              <th>Tipo de Consulta</th>
              <th>Status da Consulta</th>
            </tr>
          </thead>
          <tbody>
            <% for (const consulta of consultas) { %>
            <tr>
              <td><%= consulta.idConsulta %></td>
              <td><%= consulta.idMedico %></td>
              <td><%= consulta.dataConsulta.toISOString().split('T')[0] %></td>
              <td><%= consulta.tipoDeConsulta %></td>
              <td><%= consulta.statusDaConsulta %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Scripts do Bootstrap (jQuery e Popper.js são necessários para alguns componentes) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>

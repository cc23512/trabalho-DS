<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Emails</title>

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="../../public/consultas.css" />
  </head>

  <body>
    <div class="container mt-5">
      <h2>Novos emails do paciente <%= paciente.nomePaciente %></h2>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID Consulta</th>
            <th>Médico</th>
            <th>Mais Informações</th>
          </tr>
        </thead>
        <tbody>
          <% for (const consulta of consultas) { %>
          <tr>
            <td><%= consulta.idConsulta %></td>
            <td><%= consulta.nomeMedico %></td>
            <td>
              <a
                href="/emailCompleto/<%= consulta.idConsulta %>"
                class="btn btn-danger btn-sm"
              >
                Ver Email
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <a href="/dashboard" class="btn btn-primary">Voltar</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
